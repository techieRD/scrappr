<p id="notice"><%= notice %></p>

<p>
  <h1 class="titlefont"><%= current_user.email.upcase %></h1>
</p>

<hr>

<div class="row">

<% current_user.items.each do |item| %>
		<div class="panel col-md-3">
			<div class="panel-heading">
				<h3><%= item.name.upcase %></h3>
				<%= number_to_currency item.price %>
			</div>
		<div class="panel-body">
			<div>
				<img src=" <%=item.image %>" class= "itempic">
			</div>
			<p><%= link_to "MORE INFO", item, class: "contact" %></p>
			<div >
				<%= link_to 'EDIT', edit_item_path(item), class: "contact" %>
				<%= link_to 'DELETE', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "contact" %>
			</div>
		</div>
		
	</div>
			
	<% end %>

</div>

<%= link_to "NEW LISTING", new_item_path, class: "btn btn-danger" %>

