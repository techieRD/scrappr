<!DOCTYPE html>
<html>
<head>
	<title>SCRAPPR</title>


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:600' rel='stylesheet' type='text/css'>
  
</head>
<body>

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="logo" href="/home/index/">SCRAPPR</a>
			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-left">
					<li class="dropdown">
						<a href="#" class="tog" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">CATEGORIES<span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li>
								<div class="row catlink">
									<%= image_tag "art.svg", class: "caticon" %><%= link_to 'Art', category_path(id: 2) %>
								</div>
							</li>
							<li>
								<div class= "row catlink">
									<%= image_tag "appliances.svg", class: "caticon" %><%= link_to 'Appliances', category_path(id: 1) %>
								</div>
							</li>
							<li>
								<div class= "row catlink">
									<%= image_tag "clothes.svg", class: "caticon" %><%= link_to 'Clothes', category_path(id: 3) %>
								</div>
							</li>
							<li>
								<div class= "row catlink">
									<%= image_tag "electronics.svg", class: "caticon" %><%= link_to 'Electronics', category_path(id: 4) %>
								</div>
							</li>
							<li>
								<div class= "row catlink">
									<%= image_tag "furniture.svg", class: "caticon" %><%= link_to 'Furniture', category_path(id: 5) %>
								</div>
							</li>
							<li>
								<div class= "row catlink">
									<%= image_tag "misc.svg", class: "caticon" %><%= link_to 'Misc.', category_path(id: 6) %>
								</div>
							</li>
						</ul>
					</li>
				</ul>
			</div>
			<div class="container">
		    	<div class="pull-right">
		    		<% if user_signed_in? %>
			    		<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
		    		<% end %>
		    	</div>
		    </div>
		</div>
	</nav>

	<div class="container">
		<%= yield %>
	</div>

	

</body>
</html>
