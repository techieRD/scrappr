<p id="notice"><%= notice %></p>

<p>
  <h1 class="titlefont"><%= @category.name.upcase %></h1>
</p>

<hr>

<div class="row">
	<% @category.items.each do |item| %>
	<div class="panel col-md-3">
		<div class="panel-heading">
			<h3><%= item.name.upcase %></h3>
			<%= number_to_currency item.price %>
		</div>
		<div class="panel-body">
			<div>
				<img src=" <%=item.image %>" class= "itempic">
			</div>
			<p><%= link_to "MORE INFO", item, class: "contact" %></p>
		</div>
		
	</div>
	<% end %>
</div>
	




<div>
	<%= link_to 'Back', categories_path %>
</div>


